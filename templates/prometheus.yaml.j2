global:
  scrape_interval: 5s
  evaluation_interval: 5s

rule_files:
  # - "rules/*.yml"

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:{{ docker_port_prometheus }}"]
  - job_name: "node"
    static_configs:
      - targets: ["node-exporter:{{ docker_port_nodeexporter }}"]
  - job_name: "cadvisor"
    scrape_interval: 5s
    static_configs:
      - targets: ["cadvisor:{{ docker_port_cadvisor }}"]
